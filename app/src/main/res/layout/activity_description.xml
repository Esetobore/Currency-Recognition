    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Description">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/axiforma_bold"
        android:paddingStart="10dp"
        android:paddingEnd="20dp"
        android:text="Steps to Follow\n\nONE:Once the take Picture button in the bright yellow color is clicked yes to allow the app be able to use the camera\n\n
TWO:Click the take picture button in the bright yellow color to open your camera and click the camera button to snap\n\n
THREE: CLick ok after the image is captured then watch the magic "
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>