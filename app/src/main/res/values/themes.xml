<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyRecognition" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Light mode -->
    <!-- Screen background if light mode on-->
    <style name = "SCREEN">
        <item name= "android:background">#7DBC9E</item>
    </style>
    <!--Texts background if light mode on -->
    <style name="TEXT">
        <item name = "android:textColor">@color/black</item>
    </style>
    <style name="TEXT_CARD">
        <item name = "android:textColor">#FFFF</item>
    </style>
    <!--button background if light node on -->
    <style name="BUTTON">
        <item name = "android:background">#000000</item>
        <item name="android:textColor">#FFFF</item>
    </style>
    <!--CardView background if light mode on -->
    <style name="CARD">
        <item name = "cardBackgroundColor">#4E5053</item>
    </style>
</resources>